{
  "name": "nailit-infrastructure",
  "version": "0.1.0",
  "description": "NailIt Infrastructure as Code using AWS CDK",
  "main": "bin/nailit-app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "deploy": "cdk deploy",
    "deploy:dev": "cdk deploy --context environment=development",
    "deploy:staging": "cdk deploy --context environment=staging", 
    "deploy:prod": "cdk deploy --context environment=production",
    "diff": "cdk diff",
    "synth": "cdk synth",
    "destroy": "cdk destroy"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.6",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "typescript": "~4.9.5",
    "ts-node": "^10.9.1",
    "source-map-support": "^0.5.21"
  },
  "dependencies": {
    "aws-cdk-lib": "2.80.0",
    "constructs": "^10.0.0"
  },
  "keywords": [
    "aws",
    "cdk",
    "infrastructure",
    "nailit",
    "serverless"
  ],
  "author": "NailIt Team",
  "license": "MIT"
} 